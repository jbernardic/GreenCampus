@model IEnumerable<GreenCampus.Models.GreenActivity>

@{
    ViewData["Title"] = "Green Activities";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Green Activities</h1>
        <a asp-action="Create" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Add New Activity
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-success">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0">
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.GreenActivityId" class="btn btn-sm btn-outline-primary">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.GreenActivityId" class="btn btn-sm btn-outline-secondary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.GreenActivityId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <h4 class="alert-heading">No activities yet!</h4>
            <p>Start by adding your first green activity to promote sustainability on campus.</p>
            <hr>
            <a asp-action="Create" class="btn btn-success">Add Your First Activity</a>
        </div>
    }
</div>
