@model GreenCampus.Models.GreenActivity

@{
    ViewData["Title"] = "Activity Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="mb-0">Activity Details</h2>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted">Activity ID</dt>
                        <dd class="col-sm-9">@Model.GreenActivityId</dd>

                        <dt class="col-sm-3 text-muted">Name</dt>
                        <dd class="col-sm-9">
                            <h4 class="text-success">@Model.Name</h4>
                        </dd>

                        <dt class="col-sm-3 text-muted">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.GreenActivityId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.GreenActivityId" class="btn btn-danger">Delete</a>
                        <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
