@model GreenCampus.Models.GreenActivity

@{
    ViewData["Title"] = "Delete Activity";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Activity</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Are you sure you want to delete this activity?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-3 text-muted">Activity ID</dt>
                        <dd class="col-sm-9">@Model.GreenActivityId</dd>

                        <dt class="col-sm-3 text-muted">Name</dt>
                        <dd class="col-sm-9">
                            <h4 class="text-danger">@Model.Name</h4>
                        </dd>

                        <dt class="col-sm-3 text-muted">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="GreenActivityId" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
