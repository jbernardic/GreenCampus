@model GreenCampus.Models.UserVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<section class="login-hero">
    <div class="login-overlay"></div>
    <div class="container">
        <div class="login-content">
            <div class="login-card">
                <div class="login-header">
                    <div class="logo-badge-login">🌱</div>
                    <h1 class="login-title">Welcome Back</h1>
                    <p class="login-subtitle">Sign in to continue your eco journey</p>
                </div>

                <form asp-action="Login" method="post" class="login-form">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="form-group-login">
                        <label asp-for="Email" class="form-label-login">Email</label>
                        <input asp-for="Email" class="form-control-login" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger-custom"></span>
                    </div>

                    <div class="form-group-login">
                        <label asp-for="Password" class="form-label-login">Password</label>
                        <input asp-for="Password" class="form-control-login" placeholder="Enter your password" type="password" />
                        <span asp-validation-for="Password" class="text-danger-custom"></span>
                    </div>

                    <div class="form-options">
                        <div class="remember-me">
                            <input type="checkbox" id="rememberMe" class="checkbox-custom" />
                            <label for="rememberMe" class="checkbox-label">Remember me</label>
                        </div>
                        <a href="#" class="forgot-password">Forgot password?</a>
                    </div>

                    <button type="submit" class="btn-login-submit">
                        <span>Sign In</span>
                        <span class="btn-icon-login">🔓</span>
                    </button>
                </form>

                <div class="divider-login">
                    <span>or</span>
                </div>

                <div class="social-login-login">
                    <button type="button" class="btn-social-login">
                        <span class="social-icon-login">🔍</span>
                        Continue with Google
                    </button>
                </div>

                <div class="signup-link-login">
                    Don't have an account? <a asp-controller="User" asp-action="Register">Create Account</a>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}