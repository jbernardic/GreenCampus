@{
    ViewData["Title"] = "Home Page";
}

<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 class="hero-title">Make a Difference, Earn Green Tokens</h1>
        <p class="hero-subtitle">Join GreenCampus and take part in eco-friendly activities. Create sustainable projects, reduce your carbon footprint, and earn rewards while making our campus greener for future generations.</p>
        <button class="btn btn-hero" onclick="location.href='@Url.Action("StartYourJourney")'">
            START YOUR EKO JOURNEY
        </button>
    </div>
    <div class="hero-dots">
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
</section>

<section class="about-section">
    <div class="container">
        <h2 class="section-title">About Us</h2>

        <div class="row mt-5">
            <div class="col-lg-5">
                <div class="globe-container">
                    <div class="eco-circle">
                        <span class="eco-icon">🌍</span>
                        <div class="circle-text">GREEN<br />CAMPUS</div>
                    </div>
                </div>
                <div class="quote-box">
                    <p class="quote-text">"Every small action towards sustainability creates a ripple effect. Together, we're building a greener tomorrow."</p>
                </div>
            </div>

            <div class="col-lg-7">
                <h3 class="about-heading">Who we are</h3>
                <p class="about-text">GreenCampus is an innovative platform that empowers students to make a positive environmental impact. Founded in 2024, we've created a community where students can participate in eco-friendly activities, create their own sustainability projects, and earn Green Tokens as rewards. From recycling drives to tree planting, campus clean-ups to sustainable workshops - every action counts. Our mission is to transform campus life into a model of environmental stewardship, one activity at a time.</p>

                <div class="image-grid mt-4">
                    <div class="grid-item">
                        <img src="https://images.unsplash.com/photo-1542601906990-b4d3fb778b09?w=500" alt="Students recycling" class="grid-img" />
                        <div class="grid-overlay">
                            <span class="grid-label">♻️ Recycling Drive</span>
                        </div>
                    </div>
                    <div class="grid-item">
                        <img src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=500" alt="Tree planting" class="grid-img" />
                        <div class="grid-overlay">
                            <span class="grid-label">🌳 Tree Planting</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
